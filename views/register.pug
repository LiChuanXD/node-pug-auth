doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewpoint" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" type="text/css" href="/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="/all.min.css")
        link(rel="stylesheet" type="text/css" href="/style.css")
        title AUTH| REGISTER
    
    body
        div(class="container-fluid")
            form(id="box" method="POST" action="/user/register")
                p
                    i(class="fas fa-registered")
                h1 REGISTER
                include ./includes/errors.pug
                div(class="form-group")
                    label(for="name") Name : 
                    input(type="text" class="form-control" name="name" placeholder="*Name")
                div(class="form-group")
                    label(for="email") Email :
                    input(type="email" class="form-control" name="email" placeholder="*Email Address")
                div(class="form-group")
                    label(for="password") Password : 
                    input(type="text" class="form-control" name="password" placeholder="*Password")
                div(class="form-group")
                    label(for="cfmPassword") Confirm Password : 
                    input(type="text" class="form-control" name="cfmPassword" placeholder="*Confirm Password")
                div(class="form-group")
                    input(type="submit" value="REGISTER" class="btn btn-primary")
                    
            p Have an account?
                a(href="/user/login") LOGIN



